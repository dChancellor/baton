export HOST_NAME=$HOSTNAME
export CONFIGS_PATH="$DOTFILE_PATH/configs"
export SCRIPTS_PATH="$DOTFILE_PATH/scripts"
export SETUP_PATH="$HOME/setup"
export INSTALL_PATH="$SETUP_PATH/install"

if [ "$HOSTNAME" = "indeed" ]; then
    IS_WORK_LAPTOP=true
else
    IS_WORK_LAPTOP=false
fi
export IS_WORK_LAPTOP

# adds my custom scripts to PATH for execution
export PATH="$PATH:$SCRIPTS_PATH"
